FROM python:3

ARG ARANGO_USERNAME
ARG ARANGO_PASSWORD
ARG DB_HOST
ARG DB_NAME
ARG JWT_SECRET_KEY

ARG VERSION
ARG JOB_URL
ARG COMMIT_SHA

ARG TIMEZONE



ENV ARANGO_USERNAME=$ARANGO_USERNAME
ENV ARANGO_PASSWORD=$ARANGO_PASSWORD
ENV DB_HOST = $DB_HOST
ENV DB_NAME = $DB_NAME 
ENV JWT_SECRET_KEY=$JWT_SECRET_KEY

ENV VERSION=$VERSION
ENV JOB_URL=$JOB_URL
ENV COMMIT_SHA=$COMMIT_SHA

ENV TIMEZONE=$TIMEZONE

ADD . /app
WORKDIR /app

COPY requirements.txt ./
RUN pip install --no-cache-dir -r requirements.txt

COPY . .

COPY --chmod=744 ./docker/docker-entrypoint.sh /docker-entrypoint.sh

ENTRYPOINT [ "/docker-entrpoint.sh" ]

CMD ["webserver"]

